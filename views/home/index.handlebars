<section class="section-home">
    <div class="row">
        <div class="col-md-12">
            {{>home/services}}
        </div>
    </div>
</section>
<!--/section-home services-->
<section class="section-home">
    <div class="row">
        <div class="col-md-12">
            {{>home/portfolio}}
        </div>
    </div>
</section>
<div class="row">
    <!-- Blog Entries Column -->
    <div class="col-md-8">

        <h1 class="my-4">Home Page
            <small>Secondary Text</small>
        </h1>

        <!-- Blog Post -->
        {{#each posts}}
        <div class="card mb-4">
            <img class="card-img-top" src="/uploads/img/{{file}}" alt="Card image cap">
            <div class="card-body">
                <h2 class="card-title">{{title}}</h2>
                <p class="card-text">{{description}}</p>
                <a href="/post/{{translitTitle}}" class="btn btn-primary">Читати далі &rarr;</a>
            </div>
            <div class="card-footer text-muted">
                Опубліковано {{generateDate date 'LL'}}.
                <a href="#">WebStudio-Design</a>
            </div>
        </div>
        {{/each}}

        <!-- Pagination -->
        <ul class="pagination justify-content-center mb-4">
            <li class="page-item">
                <a class="page-link" href="#">&larr; Older</a>
            </li>
            <li class="page-item disabled">
                <a class="page-link" href="#">Newer &rarr;</a>
            </li>
        </ul>

    </div>

    <!-- Sidebar Widgets Column -->
    <div class="col-md-4">

        {{>home/sidebar}}

    </div>

</div>
<!-- /.row -->