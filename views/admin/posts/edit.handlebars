<h1>Редагувати запис</h1>
<form action="/admin/posts/edit/{{post.id}}?_method=PUT" method="post">
    <div class="form-group">
        <label for="title">Заголовок запису</label>
        <input name="title"
               type="text"
               class="form-control"
               id="title"
               value="{{post.title}}"
        >
    </div>
    <div class="form-group">
        <label for="title">Статус запису</label>
        <select name="status"
                id="status"
                class="form-control"
        >
        {{#select post.status}}
            <option value="public">Оприлюднений</option>
            <option value="private">Приватний</option>
            <option value="draft">Чернетка</option>
        {{/select}}
        </select>
    </div>
    <div class="form-group">
        <label for="description">Опис запису</label>
        <textarea name="description"
                  class="form-control"
                  id="description"
                  cols="30"
                  rows="10"
        >{{post.description}}
        </textarea>
    </div>
    <button class="btn btn-primary" type="submit">Зберегти</button>
</form>