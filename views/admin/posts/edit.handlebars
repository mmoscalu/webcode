<h1>Редагувати запис</h1>
<form action="/admin/posts/edit/{{post.slug}}?_method=PUT" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Заголовок запису</label>
        <input name="title"
               type="text"
               class="form-control"
               id="title"
               value="{{post.title}}"
        >
    </div>
    <div class="form-group">
        <label for="category">Категорія</label>
        <select name="category"
                id="category"
                class="form-control"
        >
            {{#select post.category}}
                {{#each categories}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            {{/select}}
        </select>
    </div>
    <div class="form-group">
        <label for="file">Завантажити головну фотографію</label>
        <input name="file"
               type="file"
               class="form-control"
        >
    </div>
    <div class="form-group">
        <label for="title">Статус запису</label>
        <select name="status"
                id="status"
                class="form-control"
        >
        {{#select post.status}}
            <option value="public">Оприлюднений</option>
            <option value="private">Приватний</option>
            <option value="draft">Чернетка</option>
        {{/select}}
        </select>
    </div>
    <div class="form-group">
        <label for="description">Опис запису</label>
        <textarea
                required
                name="description"
                  class="form-control"
                  id="description"
                  cols="30"
                  rows="10"
        >{{post.description}}
        </textarea>
    </div>
    <button class="btn btn-primary" type="submit">Оновити запис</button>
</form>