<h1>Додати новий запис</h1>
<form action="/admin/posts/new" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Заголовок запису</label>
        <input name="title"
               type="text"
               class="form-control"
               id="title"
               placeholder="Введіть заголовок запису"
               required
        >
    </div>
    <div class="form-group">
        <label for="category">Категорія</label>
        <select name="category"
                id="category"
                class="form-control"
                required
        >
            {{#each categories}}
                <option value="{{id}}">{{name}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label for="file">Завантажити головну фотографію</label>
        <input name="file"
               type="file"
               class="form-control"
               required
        >
    </div>
    <div class="form-group">
        <label for="status">Статус запису</label>
        <select name="status"
                id="status"
                class="form-control"
        >
            <option value="public">Оприлюднений</option>
            <option value="private">Приватний</option>
            <option value="draft">Чернетка</option>
        </select>
    </div>
    <div class="form-group">
        <label for="description">Опис запису</label>
        <textarea
            required
            name="description"
            class="form-control"
            id="description"
            cols="30"
            rows="10"
            placeholder="Введіть опис запису"

        >
        </textarea>
    </div>
    <button class="btn btn-primary" type="submit">Зберегти</button>
</form>