<h1>Додати новий запис</h1>
<form action="/admin/posts/new" method="post">
    <div class="form-group">
        <label for="title">Заголовок запису</label>
        <input name="title"
               type="text"
               class="form-control"
               id="title"
               placeholder="Введіть заголовок запису"
        >
    </div>
    <div class="form-group">
        <label for="title">Статус запису</label>
        <select name="status"
                id="status"
                class="form-control"
        >
            <option value="public">Оприлюднений</option>
            <option value="private">Приватний</option>
            <option value="draft">Чернетка</option>
        </select>
    </div>
    <div class="form-group">
        <label for="description">Опис запису</label>
        <textarea name="description"
               class="form-control"
               id="description"
               cols="30"
               rows="10"
               placeholder="Введіть опис запису"
        >
        </textarea>
    </div>
    <button class="btn btn-primary" type="submit">Зберегти</button>
</form>